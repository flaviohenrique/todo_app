{
  "name": "server",
  "packageManager": "yarn@3.0.2",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.10.4",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8"
  },
  "dependencies": {
    "@badrap/result": "^0.2.8",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "typeorm": "0.2.38",
    "typeorm-typedi-extensions": "^0.4.1",
    "typescript": "^4.4.4"
  },
  "nohoist": [
    "**/typeorm/**",
    "**/typeorm"
  ],
  "scripts": {
    "dev": "ts-node-dev ./src/app.ts",
    "typeorm:cli": "ts-node --cwd-mode $(yarn bin typeorm)",
    "db:migration:generate": "yarn run typeorm:cli migration:generate -p",
    "db:migration:run": "yarn run typeorm:cli migration:run",
    "db:migration:create": "yarn run typeorm:cli migration:create -n"
  }
}
