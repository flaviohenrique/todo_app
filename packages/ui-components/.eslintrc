{
  "plugins": [
    "promise",
    "import"
  ],
  "extends": [
    "standard-react",
    "plugin:promise/recommended",
    "plugin:import/recommended"
  ],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "17"
    }
  }
}
